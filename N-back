  <script>
    // --- è³‡æ–™è¨­å®š ---
    // 36ç¨®å‹•ç‰©æ¸…å–® (ä½¿ç”¨ Emoji ç¢ºä¿ç›¸å®¹æ€§ï¼Œè‹¥éœ€æ”¹ç‚ºçœŸå¯¦åœ–ç‰‡ï¼Œè«‹ä¿®æ”¹ renderAnimal å‡½æ•¸)
    const ANIMALS = [
      "ğŸ¶", "ğŸ±", "ğŸ­", "ğŸ¹", "ğŸ°", "ğŸ¦Š", "ğŸ»", "ğŸ¼", "ğŸ¨", "ğŸ¯", 
      "ğŸ¦", "ğŸ®", "ğŸ·", "ğŸ¸", "ğŸµ", "ğŸ”", "ğŸ§", "ğŸ¦", "ğŸ¤", "ğŸ¦†", 
      "ğŸ¦…", "ğŸ¦‰", "ğŸ¦‡", "ğŸº", "ğŸ—", "ğŸ´", "ğŸ¦„", "ğŸ", "ğŸ›", "ğŸ¦‹", 
      "ğŸŒ", "ğŸ", "ğŸœ", "ğŸ•·", "ğŸ¢", "ğŸ"
    ];

    function getRandomAnimals(count) {
      const shuffled = [...ANIMALS].sort(() => 0.5 - Math.random());
      return shuffled.slice(0, count);
    }

    // --- è®Šæ•¸èˆ‡ç‹€æ…‹ ---
    let timer = 0;
    let totalSteps = 0;
    let intervalId = null;
    let isRunning = false;
    let isPaused = false;
    let musicEnabled = false;

    // æ ¸å¿ƒå¾ªç’°è®Šæ•¸
    let lastLoopTime = 0;
    let lastStepTime = 0;
    let stepInterval = 60000 / 180;
    let nextQuestionTime = 0;

    // éŠæˆ²è¨­å®š
    let currentLevel = 2; // å‹•ç‰©æ•¸é‡ 2, 3, 4
    let currentRule = "REACTION"; // "REACTION" æˆ– "MEMORY"
    let memoryTimeouts = []; // å„²å­˜è¨˜æ†¶æ¨¡å¼ä¸‹çš„ timeout ID ä»¥ä¾¿æ¸…é™¤

    // DOM å…ƒç´ 
    const cadenceSlider = document.getElementById('cadence');
    const intervalSlider = document.getElementById('interval');
    const cadenceValue = document.getElementById('cadenceValue');
    const intervalValue = document.getElementById('intervalValue');
    const intervalLabel = document.getElementById('intervalLabel');
    const startBtn = document.getElementById('startBtn');
    const pauseBtn = document.getElementById('pauseBtn');
    const stopBtn = document.getElementById('stopBtn');
    const musicBtn = document.getElementById('musicBtn');
    const timerEl = document.getElementById('timer');
    const totalStepsEl = document.getElementById('totalSteps');
    const animalContainer = document.getElementById('animalContainer');
    const footstepAudio = document.getElementById('footstep');
    const levelRadios = document.querySelectorAll('input[name="level"]');
    const ruleRadios = document.querySelectorAll('input[name="rule"]');
    const ruleOverlay = document.getElementById('ruleOverlay');
    const ruleOverlayText = document.getElementById('ruleOverlayText');

    // çµ±è¨ˆé¢æ¿
    const statsPanelStop = document.getElementById('statsPanelStop');
    const finalTimeStopEl = document.getElementById('finalTimeStop');
    const finalStepsStopEl = document.getElementById('finalStepsStop');
    const restartBtn = document.getElementById('restartBtn');
    const statsPanelPause = document.getElementById('statsPanelPause');
    const finalTimePauseEl = document.getElementById('finalTimePause');
    const finalStepsPauseEl = document.getElementById('finalStepsPause');
    const pauseRestartBtn = document.getElementById('pauseRestartBtn');
    const resumeBtn = document.getElementById('resumeBtn');

    // YouTube API
    let ytPlayer = null;
    function onYouTubeIframeAPIReady() {
      ytPlayer = new YT.Player('youtubePlayer', {});
    }
    (function loadYT() {
      const tag = document.createElement('script');
      tag.src = "https://www.youtube.com/iframe_api";
      const firstScriptTag = document.getElementsByTagName('script')[0];
      firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
    })();

    // --- è¼”åŠ©å‡½æ•¸ ---
    function playFootstep() {
      footstepAudio.currentTime = 0;
      footstepAudio.play().catch(()=>{});
    }

    function formatTime(seconds) {
      const m = Math.floor(seconds / 60).toString().padStart(2,'0');
      const s = (seconds % 60).toString().padStart(2,'0');
      return `${m}:${s}`;
    }

    function updateTimer() { timerEl.textContent = formatTime(timer); }
    function updateStats() { totalStepsEl.textContent = totalSteps; }

    function clearTimers() {
      if (intervalId) { cancelAnimationFrame(intervalId); intervalId = null; }
      memoryTimeouts.forEach(id => clearTimeout(id));
      memoryTimeouts = [];
    }

    // --- æ ¸å¿ƒé‚è¼¯ ---

    // å–å¾—ç•¶å‰è¨­å®šçš„é–“éš”æ™‚é–“ (åæ‡‰æ¨¡å¼=æ¯é¡Œé–“éš”, è¨˜æ†¶æ¨¡å¼=ä½œç­”æ™‚é–“)
    function getCurrentSettingTime() {
      return parseInt(intervalSlider.value, 10) || 4;
    }

    // é¡¯ç¤ºä¸€çµ„å‹•ç‰© (åæ‡‰æ¨¡å¼ç”¨)
    function renderReactionMode() {
      const animals = getRandomAnimals(currentLevel);
      animalContainer.innerHTML = '';
      animals.forEach(animal => {
        const el = document.createElement('div');
        el.className = 'animal-card';
        el.textContent = animal;
        // å¦‚æœæ‚¨æƒ³æ”¹ç”¨åœ–ç‰‡ï¼Œè«‹å°‡ä¸Šä¸€è¡Œè¨»è§£ï¼Œä¸¦å–æ¶ˆä¸‹ä¸€è¡Œè¨»è§£ï¼š
        // el.innerHTML = `<img src="æ‚¨çš„åœ–ç‰‡è·¯å¾‘/${animal}.jpg" style="width:100px;">`;
        animalContainer.appendChild(el);
      });
    }

    // åŸ·è¡Œè¨˜æ†¶åºåˆ— (è¨˜æ†¶æ¨¡å¼ç”¨)
    function runMemorySequence() {
      const animals = getRandomAnimals(currentLevel);
      const displayTimePerItem = 2000; // æ¯ä¸€å¼µåœç•™ 2 ç§’
      
      // æ¸…ç©ºç•«é¢
      animalContainer.innerHTML = '';

      // ä¾åºé¡¯ç¤º
      animals.forEach((animal, index) => {
        const showId = setTimeout(() => {
          animalContainer.innerHTML = ''; // å…ˆæ¸…ç©º
          const el = document.createElement('div');
          el.className = 'animal-card';
          el.textContent = animal;
          animalContainer.appendChild(el);
        }, index * displayTimePerItem);
        memoryTimeouts.push(showId);
      });

      // é¡¯ç¤ºçµæŸå¾Œï¼Œé€²å…¥å›æ†¶éšæ®µ
      const recallStartId = setTimeout(() => {
        animalContainer.innerHTML = '<div class="recall-prompt">â“ è«‹å›ç­”</div>';
      }, animals.length * displayTimePerItem);
      memoryTimeouts.push(recallStartId);
    }

    // è§¸ç™¼ä¸‹ä¸€æ¬¡é¡Œç›®
    function triggerNextQuestion() {
      const settingTime = getCurrentSettingTime();

      if (currentRule === 'REACTION') {
        // åæ‡‰æ¨¡å¼ï¼šç›´æ¥é¡¯ç¤ºï¼Œä¸¦è¨­å®šä¸‹æ¬¡æ™‚é–“ = ç•¶å‰ + è¨­å®šç§’æ•¸
        renderReactionMode();
        nextQuestionTime = timer + settingTime;
      } else {
        // è¨˜æ†¶æ¨¡å¼ï¼š
        // ç¸½è€—æ™‚ = (å‹•ç‰©æ•¸é‡ * 2ç§’) + (ä½œç­”æ™‚é–“ settingTime)
        const sequenceDuration = currentLevel * 2;
        const totalRoundDuration = sequenceDuration + settingTime;
        
        runMemorySequence();
        nextQuestionTime = timer + totalRoundDuration;
      }
    }

    // ä¸»å¾ªç’°
    function startLoop() {
      lastLoopTime = performance.now();
      lastStepTime = lastLoopTime;

      // å‰›é–‹å§‹ç«‹å³è§¸ç™¼ç¬¬ä¸€é¡Œ
      triggerNextQuestion();

      const loop = (now) => {
        if (!isRunning || isPaused) return;

        const delta = now - lastLoopTime;
        // æ¯ç§’æ›´æ–° Timer
        if (delta >= 1000) {
          const addSec = Math.floor(delta / 1000);
          timer += addSec;
          lastLoopTime += addSec * 1000;
          updateTimer();
        }

        // ç¯€æ‹å™¨èˆ‡æ­¥æ•¸
        if (now - lastStepTime >= stepInterval) {
          playFootstep();
          totalSteps++;
          lastStepTime = now;
          updateStats();
        }

        // æª¢æŸ¥æ˜¯å¦è©²å‡ºä¸‹ä¸€é¡Œ
        if (timer >= nextQuestionTime) {
          triggerNextQuestion();
        }

        intervalId = requestAnimationFrame(loop);
      };
      intervalId = requestAnimationFrame(loop);
    }

    // --- ç‹€æ…‹æ§åˆ¶ ---

    function resetGameState() {
      clearTimers();
      timer = 0;
      totalSteps = 0;
      isRunning = false;
      isPaused = false;
      updateTimer();
      updateStats();
      animalContainer.innerHTML = '<div class="recall-prompt">æº–å‚™</div>';
      statsPanelStop.classList.remove('show');
      statsPanelPause.classList.remove('show');
      startBtn.disabled = false;
      pauseBtn.disabled = true;
      stopBtn.disabled = true;
    }

    function startTimer() {
      resetGameState();
      isRunning = true;
      startBtn.disabled = true;
      pauseBtn.disabled = false;
      stopBtn.disabled = false;
      startLoop();
      if (musicEnabled && ytPlayer && ytPlayer.playVideo) ytPlayer.playVideo();
    }

    function pauseGame() {
      if (!isRunning || isPaused) return;
      isPaused = true;
      clearTimers(); // æš«åœæ™‚æ¸…é™¤æ‰€æœ‰è¨ˆæ™‚å™¨ï¼ŒåŒ…å«è¨˜æ†¶æ¨¡å¼çš„é–ƒç¾

      finalTimePauseEl.textContent = formatTime(timer);
      finalStepsPauseEl.textContent = totalSteps;
      statsPanelPause.classList.add('show');
      pauseBtn.disabled = true;
      stopBtn.disabled = false;

      if (ytPlayer && ytPlayer.pauseVideo && musicEnabled) ytPlayer.pauseVideo();
    }

    function resumeGame() {
      if (!isRunning || !isPaused) return;
      isPaused = false;
      statsPanelPause.classList.remove('show');

      // æ¢å¾©æ™‚æ¯”è¼ƒæ£˜æ‰‹ï¼Œç‚ºäº†ç°¡å–®èµ·è¦‹ï¼Œæ¢å¾©å¾Œç›´æ¥é€²å…¥ä¸‹ä¸€é¡Œçš„ç­‰å¾…æˆ–ç«‹å³è§¸ç™¼
      // é€™è£¡é¸æ“‡ï¼šé‡ç½® Loop æ™‚é–“ï¼Œä¸¦ç«‹å³è§¸ç™¼ä¸€å€‹æ–°é¡Œç›®ä»¥ç¢ºä¿æµç¨‹é †æš¢
      lastLoopTime = performance.now();
      lastStepTime = lastLoopTime;
      
      triggerNextQuestion(); // é‡æ–°é–‹å§‹ä¸€é¡Œ
      
      const loop = (now) => {
        if (!isRunning || isPaused) return;
        const delta = now - lastLoopTime;
        if (delta >= 1000) {
          const addSec = Math.floor(delta / 1000);
          timer += addSec;
          lastLoopTime += addSec * 1000;
          updateTimer();
        }
        if (now - lastStepTime >= stepInterval) {
          playFootstep();
          totalSteps++;
          lastStepTime = now;
          updateStats();
        }
        if (timer >= nextQuestionTime) {
          triggerNextQuestion();
        }
        intervalId = requestAnimationFrame(loop);
      };
      intervalId = requestAnimationFrame(loop);

      pauseBtn.disabled = false;
      if (ytPlayer && ytPlayer.playVideo && musicEnabled) ytPlayer.playVideo();
    }

    function stopAll() {
      clearTimers();
      isRunning = false;
      isPaused = false;
      finalTimeStopEl.textContent = formatTime(timer);
      finalStepsStopEl.textContent = totalSteps;
      statsPanelStop.classList.add('show');
      statsPanelPause.classList.remove('show');
      startBtn.disabled = true;
      pauseBtn.disabled = true;
      stopBtn.disabled = true;
      if (ytPlayer && ytPlayer.pauseVideo && musicEnabled) ytPlayer.pauseVideo();
    }

    function showRuleOverlay(text) {
      ruleOverlayText.textContent = text;
      ruleOverlay.classList.add('show');
      setTimeout(() => { ruleOverlay.classList.remove('show'); }, 2000);
    }

    // --- äº‹ä»¶ç›£è½ ---

    musicBtn.onclick = () => {
      musicEnabled = !musicEnabled;
      if (musicEnabled) {
        musicBtn.textContent = 'ğŸ”‡ é—œéŸ³æ¨‚';
        musicBtn.classList.add('active');
        if (ytPlayer && ytPlayer.playVideo) ytPlayer.playVideo();
      } else {
        musicBtn.textContent = 'ğŸµ éŸ³æ¨‚';
        musicBtn.classList.remove('active');
        if (ytPlayer && ytPlayer.pauseVideo) ytPlayer.pauseVideo();
      }
    };

    cadenceSlider.oninput = () => {
      cadenceValue.textContent = cadenceSlider.value;
      stepInterval = 60000 / parseInt(cadenceSlider.value, 10);
    };

    intervalSlider.oninput = () => {
      intervalValue.textContent = intervalSlider.value + 'ç§’';
    };

    levelRadios.forEach(r => {
      r.addEventListener('change', () => {
        currentLevel = parseInt(r.value, 10);
        // å¦‚æœåœ¨åæ‡‰æ¨¡å¼ä¸­ï¼Œç«‹å³åˆ·æ–°é è¦½ï¼ˆå¦‚æœåœ¨è·‘çš„è©±æœƒè‡ªå‹•æ›ï¼‰
        if (!isRunning) {
           animalContainer.innerHTML = '<div class="recall-prompt">æº–å‚™</div>';
        }
      });
    });

    ruleRadios.forEach(r => {
      r.addEventListener('change', () => {
        currentRule = r.value;
        if (currentRule === "REACTION") {
          showRuleOverlay("åæ‡‰è¨“ç·´");
          intervalLabel.textContent = "æ¯é¡Œç§’æ•¸";
        } else {
          showRuleOverlay("è¨˜æ†¶è¨“ç·´");
          intervalLabel.textContent = "ä½œç­”æ™‚é–“";
        }
        // é‡ç½®é è¦½
        if(!isRunning) animalContainer.innerHTML = '<div class="recall-prompt">æº–å‚™</div>';
      });
    });

    startBtn.onclick = () => { if (!isRunning) startTimer(); };
    pauseBtn.onclick = () => { pauseGame(); };
    stopBtn.onclick = () => { if (isRunning || isPaused) stopAll(); };
    restartBtn.onclick = () => { statsPanelStop.classList.remove('show'); startTimer(); };
    pauseRestartBtn.onclick = () => { statsPanelPause.classList.remove('show'); startTimer(); };
    resumeBtn.onclick = () => { resumeGame(); };

  </script>
</body>
</html>
